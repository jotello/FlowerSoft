extends layout

block content
    // Post
    if posts.length == 0
        h3 There is no any post here :(
    else
        .wrapper
            each post in posts
                div
                    article.post
                        a.image.featured(href='/post/' + encodeObjectID(post._id) + '/' + slugify(post.title))
                            img(src="/images/covers/" + post.coverPhoto, alt='', width='300px', height='300px')
                        a(href='/post/' + encodeObjectID(post._id) + '/' + slugify(post.title))= post.title
                        br    
                        strong 
                            p= truncateContent(post.content)
                        //a.button.big(href='/post/' + encodeObjectID(post._id) + '/' + slugify(post.title)) Comprar

                    
        // Pagination
        include parts/pagination
