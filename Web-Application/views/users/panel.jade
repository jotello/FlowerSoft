extends ../templates/default

block content

  p= 'Hola... ' + user.nombre

  div(class='row')
    div(class='col-md-6 col-md-offset-3')
      div(class='panel panel-default')
        div(class='panel-heading')= 'Calcular Valor Opción'
        div(class='panel-body')
          form(action='http://localhost:8080/auth/opcion' method='post' autocomplete='off')
            div(class='form-group')
              label(for="actual")= 'Precio Actual'
              input(type='number' min='0' step='0.01' name='actual' id='actual' placeholder='Precio Actual' class='form-control')
            div(class='form-group')
              label(for="ejercicio")= 'Precio Ejercicio'
              input(type='number' min='0' step='0.01' name='ejercicio' id='ejercicio' placeholder='Precio Ejercicio' class='form-control')
            div(class='form-group')
              label(for="tiempo")= 'Tiempo Expiración (en años)'
              input(type='number' min='0' step='0.01' name='tiempo' id='tiempo' placeholder='Tiempo Expiración (en años)' class='form-control')
            div(class='form-group')
              label(for="volatilidad")= 'Volatilidad'
              input(type='number' min='0' step='0.01' name='volatilidad' id='volatilidad' placeholder='Volatilidad' class='form-control')
            div(class='form-group')
              label(for="tasa")= 'Tasa de Interés Anual libre de riesgo'
              input(type='number' min='0' step='0.01' name='tasa' id='tasa' placeholder='Tasa de Interés Anual' class='form-control')
            button(type="submit" class='btn btn-default')= 'Calcular'