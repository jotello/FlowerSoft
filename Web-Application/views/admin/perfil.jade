include templates/default
  include templates/nav_admin
  
  body
    center
      img(src="https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png", width="20%")
      .container-fluid
          .wrapper
            form.form-signin(action='/admin/editarPerfil', method='POST')
              h2.form-signin-heading.text-center #{user.names}
              label(for="Rut") Rut
              input.form-control(type='text', name='rut', value='#{user.rut}', required='', autofocus='', readonly)
              label(for="Nombres") Nombres              
              input.form-control(type='text', name='names', value='#{user.names}', required='', autofocus='')
              label(for="Apellidos") Apellidos              
              input.form-control(type='text', name='family_name', value='#{user.family_name}', required='', autofocus='')
              label(for="Email") Email
              input.form-control(type='text', name='email', value='#{user.email}', required='', autofocus='', readonly) 
              label(for="Rol") Rol              
              input.form-control(type='text', name='rol', value='#{user.rol}', required='', autofocus='', readonly) 
              input.form-conrol(type="text", name="id", value='#{user._id}', hidden, readonly)            

              button.btn.btn-lg.btn-block(type='submit') Guardar Cambios



