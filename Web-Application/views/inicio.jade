extends templates/default
link(rel='stylesheet', href='/stylesheets/style.css')
link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js')
script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')

block content
  
  br
  br
  #todo
    center
       
      h1 Creacion de pedidos
      form(action='/dashboard/crearPedido', method='POST')
       input(placeholder='detalle', name='detalle', type='text')
       input(placeholder='fecha', name='fecha', type='text')
       button(type='submit') Crear

      h1 Lista de Pedidos
      ul.list-group
      each item in pedidos
       li.list-group-item
        | Pedido :#{item.id}
        | Detalle: #{item.detalle}  
        a(href='/dashboard/pedido/delete/#{item.id}', type='button') Eliminar
        a(href='/dashboard/pedido/edit/#{item.id}', type='button') Editar

