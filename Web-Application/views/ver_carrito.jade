include templates/default

  include templates/nav
  
  .container
      .row
        .col-md-12
          h4 Productos reservados por [nombre_usuario]
          .table-responsive
            table#mytable.table.table-bordred.table-striped
              thead
                tr
                  th ID
                  th Producto
                  th Cantidad
                  th Total
                  th Ver en detalle
                  th Editar
                  th Eliminar
              tbody
              each item in productos
                tr
                  td #{item.id_producto}
                  td #{item.nombre_producto}
                  td #{item.cantidad}
                  td #{item.total}
                  td 
                    p(data-placement='top', data-toggle='tooltip', title='Edit')
                      button.btn.btn-primary.btn-xs(data-title='Edit', data-toggle='modal', data-target='#edit')
                        span.glyphicon.glyphicon-zoom-in
                  td
                    p(data-placement='top', data-toggle='tooltip', title='Edit')
                      button.btn.btn-primary.btn-xs(data-title='Edit', data-toggle='modal', data-target='#edit')
                        span.glyphicon.glyphicon-pencil
                  td
                    p(data-placement='top', data-toggle='tooltip', title='Delete')
                      button.btn.btn-danger.btn-xs(data-title='Delete', data-toggle='modal', data-target='#delete')
                        span.glyphicon.glyphicon-trash
  .row
    .col-md-12
      h4.totalPedido #{total}
      // Trigger the modal with a button
      button.btn.btn-success.btn-lg(type='button', data-toggle='modal', data-target='#myModal')
        i.fas.fa-shopping-cart
        | Realizar Pedido
      // Modal
      #myModal.modal.fade(role='dialog')
        .modal-dialog
          // Modal content
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal') Ã—
              h4.modal-title Confirmar Pedido
            .modal-body
              h4 Productos en este pedido
              .table-responsive
                table#mytable.table.table-bordred.table-striped
                  thead
                    tr
                      th ID
                      th Producto
                      th Cantidad
                      th Total
                  tbody
                  each item in productos
                    tr
                      td #{item.id_producto}
                      td #{item.nombre_producto}
                      td #{item.cantidad}
                      td #{item.total}
              hr
              .row                                 
                .col-12.col-lg-6
                  form(action='/dashboard/pedido', method='POST')
                    .form-group
                      label Ingrese la fecha de entrega:
                      .input-group
                        input(type='date', name = 'fecha')
                      label Puede ingresar detalles en el pedido:
                      .input-group
                        input(type='text', name = 'detalle')
                        //Aqui deberia ir el id del usuario, por mientras esta hardcodeado
                        input.form-control(type='hidden' , value = 4  , name='id_usuario')
                        input.form-control(type='hidden', value = #{total}, name ='total')
                .col-12.col-lg-6
                  label Total a cancelar:
                  |  #{total}       

            .modal-footer
              button.btn.btn-danger(type='button', data-dismiss='modal') Cancelar
              button.btn.btn-success(type='submit') Confirmar

  
                                    


                            