                              button.close(type='button', data-dismiss='modal') ×
                              h3.modal-title Detalle
                            .modal-body
                              .card
                                .row
                                  aside.col-sm-7
                                    article.card-body.p-5
                                      dl.item-property
                                        h3 Su Pedido es el siguiente:
                                        dd
                                          p
                                            | #{item.descripcion}
